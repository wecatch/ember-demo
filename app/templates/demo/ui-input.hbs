<h4 class="ui header">form</h4>
<div class="html ui top attached segment">
	<div class="ui form">
		<div class="field" >
			<label>date</label>
			{{#ui-input type="date"}}{{/ui-input}}
		</div>
		<div class="field">
			<label>普通输入框</label>
			{{#ui-input}}{{/ui-input}}
		</div>
		<div class="two fields" >
			<div class="field" >
				<label>普通输入框</label>
				{{#ui-input}}{{/ui-input}}
			</div>
			<div class="field" >
				<label>普通输入框</label>
				{{#ui-input}}{{/ui-input}}
			</div>
		</div>
		{{#ui-form-input }}
			普通form输入框
		{{/ui-form-input}}
		{{#ui-form-input error=true }}
			普通form error输入框
		{{/ui-form-input}}
		{{#ui-form-input disabled=true }}
			普通form disabled 输入框
		{{/ui-form-input}}
		{{#ui-form-input readonly=true value="only read value" }}
			普通form readonly 输入框
		{{/ui-form-input}}
		{{#ui-form-input theme="inline" }}
			普通form内联输入框
		{{/ui-form-input}}
	</div>
</div>

