{{outlet}}

<h4 class="ui header">focus</h4>
<div class="html ui top attached segment">
	{{#ui-input focus=true}}{{/ui-input}}
</div>
<div class="ui instructive bottom attached segment">
	<code class="code xml">
		\{{#ui-input focus=true}}\{{/ui-input}}
	</code>
</div>

<h4 class="ui header">loading</h4>
<div class="html ui top attached segment">
	{{#ui-input theme="icon" loading=true}}<i class="search icon"></i>{{/ui-input}}
</div>
<div class="ui instructive bottom attached segment">
	<code class="code xml">
		\{{#ui-input theme="icon" loading=true}}<i class="search icon"></i>\{{/ui-input}}
	</code>
</div>

