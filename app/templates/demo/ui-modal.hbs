{{outlet}}

<div class="ui grid">
	<div class="column">
		<div class="items">
			<div class="item">
				<h3>默认弹出层</h3>
				<a href="javascript:;" {{action 'clickHandler'}}>点击</a>
				{{#ui-modal show=display}}
					{{#ui-modal-title }}modal 1{{/ui-modal-title}}
					{{#ui-modal-content theme="image"}}
						<div class="ui small image" >
							<img src="http://img0.androidesk.com/download/55a3622069401b3ce78c8317">
						</div>
						<div class="description" >
							<div class="ui header" >
								<p>first role</p>
							</div>
						</div>
					{{/ui-modal-content}}
					{{#ui-modal-foot}}
						<div class="ui black deny button">
						    Nope
						</div>
						<div class="ui positive right labeled icon button">
						    Yep, that's me <i class="checkmark icon"></i>
						</div>
					{{/ui-modal-foot}}
				{{/ui-modal}}
		    </div>
		    <br/>
			<div class="item">
				<h3>不同效果(transition：fade up, fade down, fade left, fade right, flip, drop, fly left, tada ...)</h3>
