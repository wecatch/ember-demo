				{{#ui-modal show=display1 transition="fade down"}}
					{{#ui-modal-title }}modal 2{{/ui-modal-title}}
					{{#ui-modal-content}}
						<h3>hello modal</h3>
						<ul>
							<li>
								<p>first role</p>
							</li>
							<li>
								<p>second ...</p>
							</li>
						</ul>
					{{/ui-modal-content}}
					{{#ui-modal-foot}}
						<div class="ui black deny button">
						    Nope
						</div>
						<div class="ui positive right labeled icon button">
						    Yep, that's me <i class="checkmark icon"></i>
						</div>
					{{/ui-modal-foot}}
				{{/ui-modal}}
		    </div>
		    
		</div>
	</div>
</div>